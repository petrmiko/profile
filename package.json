{
  "name": "petrmiko-profile",
  "version": "1.0.0",
  "description": "Personal website",
  "main": "index.js",
  "author": "Petr Miko",
  "license": "MIT",
  "homepage": "https://github.com/petrmiko/profile",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:petrmiko/profile.git"
  },
  "engines": {
    "node": ">=14",
    "npm": "6.14.10"
  },
  "scripts": {
    "build": "npm run clean && cross-env NODE_ENV='production' ./node_modules/.bin/parcel build ./client/index.html --public-url='/static/'",
    "clean": "npx rimraf ./dist && npx rimraf ./.cache",
    "dev": "cross-env NODE_ENV='development' npm run server",
    "lint": "lint-staged",
    "test": "echo 'Error: no test specified'",
    "server": "node ./server/index",
    "start": "cross-env NODE_ENV='production' npm run server",
    "gcp-build": "npm run build && npm prune --production"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@petrmiko/konteiner": "^2.0.0",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.4",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "autoprefixer": "^9.7.4",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^3.1.0",
    "less": "^3.10.3",
    "lint-staged": "^10.5.4",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-inlinesvg": "^1.0.0",
    "postcss-modules": "^1.5.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.0",
    "react-tippy": "^1.4.0",
    "simple-icons": "^3.12.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
