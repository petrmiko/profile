{
	"extends": [
		"next/core-web-vitals",
		"prettier"
	],
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		]
	},
	"overrides": [
		{
			"files": [
				"*.ts",
				"*.tsx"
			],
			"parser": "@typescript-eslint/parser",
			"parserOptions": {
				"ecmaVersion": 2020,
				"sourceType": "module",
				"project": "./tsconfig.json",
				"ecmaFeatures": {
					"jsx": true
				}
			},
			"extends": [
				"plugin:@typescript-eslint/recommended",
				"plugin:@typescript-eslint/recommended-requiring-type-checking"
			]
		}
	]
}
